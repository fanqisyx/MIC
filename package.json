{
  "name": "image-classifier-desktop",
  "version": "1.0.0",
  "description": "Image Classification Desktop Application",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "AI Developer",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",  // Use a recent version of Electron
    "electron-builder": "^24.9.1" // Use a recent version of electron-builder
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0" // Or newer
  },
  "build": {
    "appId": "com.example.imageclassifier",
    "productName": "Image Classifier",
    "directories": {
      "output": "dist_electron" // Output directory for packaged app
    },
    "files": [
      "electron.js",
      "node_modules/**/*", // Include Node modules used by Electron main process
      "ImageClassifier/ImageClassifier/image-classifier-ui/build/**/*", // Include React frontend build
      {
        "from": "ImageClassifier/ImageClassifier.Api/publish", // Path to your .NET published output
        "to": "backend", // Destination inside the asar.unpacked or app directory
        "filter": ["**/*"]
      },
      "assets/**/*" // Example: if you have an assets folder for icons, etc.
    ],
    "win": {
      "target": "nsis", // Installer type for Windows
      "icon": "assets/icon.ico" // Path to Windows icon
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png" // Path to Linux icon
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns" // Path to macOS icon
    },
    "asarUnpack": [ // Files that should not be packed into asar archive (e.g., executables)
      "backend/**/*"
    ]
  }
}
